/* 水平间距 */
.goods-container {
  padding-bottom: 50px;
}
.goods-container swiper {
  height: 750rpx;
}
.goods-container swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.goods-container .goods-info-box {
  padding: 10px;
  padding-right: 0;
}
.goods-container .goods-info-box .price {
  margin: 10px 0;
  color: #C00000;
  font-size: 18px;
}
.goods-container .goods-info-box .body {
  display: flex;
  justify-content: space-between;
}
.goods-container .goods-info-box .body .name {
  font-size: 13px;
  padding-right: 10px;
}
.goods-container .goods-info-box .body .like {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120px;
  font-size: 12px;
  color: gray;
}
.goods-container .goods-info-box .express {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}
.goods-container .goods-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

