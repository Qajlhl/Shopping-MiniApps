/* 水平间距 */
.cart-title {
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 14px;
  padding-left: 5px;
  border-bottom: 1px solid #efefef;
}
.cart-title .title {
  margin-left: 10px;
}
.goods-info {
  display: flex;
  padding: 10px 5px;
  border-bottom: 1px solid #f0f0f0;
}
.goods-info .left {
  align-self: center;
}
.goods-info .middle {
  margin-right: 5px;
}
.goods-info .middle image {
  width: 100px;
  height: 100px;
  display: block;
}
.goods-info .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-info .right .name {
  font-size: 13px;
}
.goods-info .right .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-info .right .bottom .price {
  font-size: 16px;
  color: #C00000;
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180px;
}
.empty .empty-img {
  width: 90px;
  height: 90px;
}
.empty .nothing {
  font-size: 12px;
  color: gray;
  margin-top: 15px;
}

